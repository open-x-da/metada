{
    "tasks": [
        {
            "type": "shell",
            "label": "CMake: Build",
            "command": "cmake --build ${workspaceFolder}/build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "Copy WRF namelist.input",
            "command": "powershell",
            "args": [
                "-Command",
                "Copy-Item -Force '${workspaceFolder}\\src\\backends\\wrf\\tutorial\\namelist.input' '${workspaceFolder}\\build\\namelist.input'"
            ],
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                }
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}