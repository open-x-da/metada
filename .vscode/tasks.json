{
    "tasks": [
        {
            "type": "shell",
            "label": "CMake: Build",
            "command": "cmake --build ${workspaceFolder}/build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "Copy WRF namelist.input",
            "command": "powershell",
            "args": [
                "-Command",
                "Copy-Item -Force '${workspaceFolder}\\src\\backends\\wrf\\tutorial\\namelist.input' '${workspaceFolder}\\build\\namelist.input'"
            ],
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                }
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Copy WRF LANDUSE.TBL",
            "command": "cp -f /d/linux/WRF/var/test/tutorial/LANDUSE.TBL /d/linux/metada/build/LANDUSE.TBL",
            "options": {
                "shell": {
                    "executable": "C:\\msys64\\usr\\bin\\bash.exe",
                    "args": ["-c"]
                }
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Prepare WRF Runtime Environment",
            "dependsOn": [
                "Copy WRF namelist.input",
                "Copy WRF LANDUSE.TBL"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}